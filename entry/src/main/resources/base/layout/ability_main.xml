<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#dbdbdb"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:id="$+id:mapLayout"/>
    <Button
        ohos:height="32vp"
        ohos:width="32vp"
        ohos:id="$+id:settings"
        ohos:end_margin="30vp"
        ohos:top_margin="30vp"
        ohos:align_parent_right="true"
        ohos:align_parent_top="true"
        ohos:background_element="$media:settings"/>
    <DirectionalLayout
        ohos:id="$+id:tablist"
        ohos:align_parent_bottom="true"
        ohos:height="60vp"
        ohos:visibility="hide"
        ohos:width="match_parent"
        ohos:alignment="bottom"
        ohos:layout_alignment="center"
        ohos:orientation="horizontal"
        ohos:text_alignment="center"
        >
        <Button
            ohos:id="$+id:btn_home"
            ohos:height="60vp"
            ohos:width="0"
            ohos:weight="0.3"
            ohos:text_size="24vp"
            ohos:text_color="#ffffff"
            ohos:background_element="#FF5555"
            ohos:text="Home"/>
        <Button
            ohos:id="$+id:btn_detected"
            ohos:height="60vp"
            ohos:width="0"
            ohos:text_color="#ffffff"
            ohos:background_element="#FF0000"
            ohos:text_size="24vp"
            ohos:weight="0.3"
            ohos:text="Detected"/>
        <Button
            ohos:id="$+id:btn_settings"
            ohos:height="60vp"
            ohos:text_color="#ffffff"
            ohos:background_element="#FF0000"
            ohos:text_size="24vp"
            ohos:width="0"
            ohos:weight="0.3"
            ohos:text="Settings"/>
    </DirectionalLayout>




</DependentLayout>