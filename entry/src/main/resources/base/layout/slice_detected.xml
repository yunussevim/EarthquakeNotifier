<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#dbdbdb"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:alignment="center">
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:background_element="$graphic:item_settings"
            ohos:alignment="center"
            ohos:orientation="horizontal"
            >

            <Image
                ohos:height="64vp"
                ohos:width="64vp"
                ohos:clip_alignment="center"
                ohos:image_src="$media:placeholder"
                ohos:weight="0.2"
                />

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:orientation="vertical"
                ohos:margin="10vp"
                ohos:weight="0.4">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="5px"
                    ohos:right_margin="5px"
                    ohos:text="Magnitude:"
                    ohos:text_size="18vp"
                    ohos:top_margin="15px"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="5px"
                    ohos:right_margin="5px"
                    ohos:text="Location:"
                    ohos:text_size="18vp"
                    ohos:top_margin="15px"
                    />

            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:orientation="vertical"
                ohos:margin="10vp"
                ohos:weight="0.4">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="5px"
                    ohos:right_margin="5px"
                    ohos:text="Date:"

                    ohos:text_size="18vp"
                    ohos:top_margin="15px"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="5px"
                    ohos:right_margin="5px"
                    ohos:text="Date:"

                    ohos:text_size="18vp"
                    ohos:top_margin="15px"
                    />

            </DirectionalLayout>


        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10vp"
            ohos:background_element="$graphic:item_settings"
            ohos:alignment="center"
            ohos:orientation="horizontal"
            >

            <Image
                ohos:height="64vp"
                ohos:width="64vp"
                ohos:clip_alignment="center"
                ohos:image_src="$media:placeholder"
                ohos:weight="0.2"
                />

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="center"
                ohos:orientation="vertical"
                ohos:margin="10vp"
                ohos:weight="0.4">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="5px"
                    ohos:right_margin="5px"
                    ohos:text="Magnitude:"
                    ohos:text_size="18vp"
                    ohos:top_margin="15px"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="5px"
                    ohos:right_margin="5px"
                    ohos:text="Location:"
                    ohos:text_size="18vp"
                    ohos:top_margin="15px"
                    />

            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:orientation="vertical"
                ohos:margin="10vp"
                ohos:weight="0.4">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="5px"
                    ohos:right_margin="5px"
                    ohos:text="Date:"

                    ohos:text_size="18vp"
                    ohos:top_margin="15px"
                    />
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="5px"
                    ohos:right_margin="5px"
                    ohos:text="Date:"

                    ohos:text_size="18vp"
                    ohos:top_margin="15px"
                    />

            </DirectionalLayout>


        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:tablist"
        ohos:align_parent_bottom="true"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:alignment="bottom"
        ohos:layout_alignment="center"
        ohos:orientation="horizontal"
        ohos:text_alignment="center"
        >
        <Button
            ohos:id="$+id:btn_home"
            ohos:height="60vp"
            ohos:width="0"
            ohos:weight="0.3"
            ohos:text_size="24vp"
            ohos:text_color="#ffffff"
            ohos:background_element="#FF0000"
            ohos:text="Home"/>
        <Button
            ohos:id="$+id:btn_detected"
            ohos:height="60vp"
            ohos:width="0"
            ohos:text_color="#ffffff"
            ohos:background_element="#FF5555"
            ohos:text_size="24vp"
            ohos:weight="0.3"
            ohos:text="Detected"/>
        <Button
            ohos:id="$+id:btn_settings"
            ohos:height="60vp"
            ohos:text_color="#ffffff"
            ohos:background_element="#FF0000"
            ohos:text_size="24vp"
            ohos:width="0"
            ohos:weight="0.3"
            ohos:text="Settings"/>
    </DirectionalLayout>
</DependentLayout>