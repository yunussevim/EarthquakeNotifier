<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#dbdbdb"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:btn_settings_back"
        ohos:height="32vp"
        ohos:width="32vp"
        ohos:top_margin="25vp"
        ohos:left_margin="30vp"
        ohos:background_element="$media:back"
        ohos:align_parent_left="true"
        ohos:align_parent_top="true"/>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:padding="30vp"
        ohos:top_margin="25vp"
        ohos:align_parent_top="true">

        <DirectionalLayout
            ohos:id="$+id:dl_notif"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:item_settings"
            ohos:top_margin="25vp"
            ohos:padding="20vp"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="Notifications:"
                ohos:weight="0.8"
                ohos:text_size="24fp"/>
            <Switch
                ohos:id="$+id:switch_notifications"
                ohos:weight="0.2"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="end"/>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:item_settings"
            ohos:top_margin="25vp"
            ohos:padding="20vp"

            ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="Distance"
                ohos:text_size="24fp"/>
            <Text
                ohos:id="$+id:text_slider"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="0 km"
                ohos:left_margin="400vp"
                ohos:text_size="24fp"/>
            <Slider
                ohos:id="$+id:slider"
                ohos:top_margin="5vp"
                ohos:left_margin="20vp"
                ohos:height="match_content"
                ohos:width="300vp"/>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:item_settings"
            ohos:top_margin="25vp"
            ohos:padding="20vp"

            ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="Magnitude"
                ohos:text_size="24fp"/>
            <TextField
                ohos:id="$+id:settings_field_magnitude"
                ohos:height="match_content"
                ohos:width="200vp"
                ohos:left_margin="400vp"
                ohos:text_size="24fp"/>

        </DirectionalLayout>

    </DirectionalLayout>

</DependentLayout>