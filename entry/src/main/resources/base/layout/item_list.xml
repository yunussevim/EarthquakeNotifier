<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="top"
    ohos:background_element="$graphic:item_background"
    ohos:margin="15px"
    ohos:padding="15px">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        >

        <Image
            ohos:id="$+id:image_item"
            ohos:height="64vp"
            ohos:width="match_parent"
            ohos:clip_alignment="center"
            ohos:image_src="$media:placeholder"
            ohos:weight="0.3"
            />

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="0.3">

            <Text
                ohos:id="$+id:item_mag"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="5px"
                ohos:right_margin="5px"
                ohos:text="Magnitude:"
                ohos:text_size="18vp"
                ohos:top_margin="15px"
                />
            <Text
                ohos:id="$+id:item_location"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="5px"
                ohos:right_margin="5px"
                ohos:text="Location:"
                ohos:text_size="18vp"
                ohos:top_margin="15px"
                />

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="0.3">

            <Text
                ohos:id="$+id:item_date"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="5px"
                ohos:right_margin="5px"
                ohos:text="Date:"
                ohos:text_size="18vp"
                ohos:top_margin="15px"
                />

        </DirectionalLayout>


    </DirectionalLayout>

</DirectionalLayout>